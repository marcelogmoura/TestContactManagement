@page
@model ContactManagement.Pages.DeleteModel
@{
    ViewData["Title"] = "Deletar Contato";
}

<h1>Deletar Contato</h1>
<hr />

<h3 class="text-danger">Você tem certeza que deseja deletar este contato?</h3>
<div>
    <h4>@Model.Contact.Name</h4>
    <dl class="row">
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Contact.Name)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Contact.Name)
        </dd>

        <dt class="col-sm-3">
            Telefone (Contato)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Contact.Phone)
        </dd>

        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Contact.Email)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Contact.Email)
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Contact.Id" />

        <input type="submit" value="Deletar" class="btn btn-danger" />
        <a href="/" class="btn btn-secondary">Cancelar</a>
    </form>
</div>